{
	"name": "nobo-hub",
	"version": "0.0.1",
	"description": "Nob√∏ Hub interface for Node.js",
	"repository": "git@github.com:silentroach/nobo-hub.git",
	"author": "Igor Kalashnikov <igor.kalashnikov@me.com>",
	"license": "MIT",
	"scripts": {
		"test": "ava",
		"cover": "nyc --reporter=html ava",
		"lint": "tslint --project tsconfig.json -t codeFrame",
		"prebuild": "rimraf dist",
		"build": "rollup -c rollup.config.ts",
		"prepublishOnly": "yarn run build",
		"travis": "nyc --reporter=lcov ava -v; cat ./coverage/lcov.info | coveralls"
	},
	"files": [
		"dist"
	],
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"devDependencies": {
		"@istanbuljs/nyc-config-typescript": "^0.1.3",
		"ava": "^2.3.0",
		"chalk": "^2.4.2",
		"coveralls": "^3.0.6",
		"husky": "^3.0.5",
		"nyc": "^14.1.1",
		"prettier": "^1.18.2",
		"pretty-quick": "^1.11.1",
		"rimraf": "^3.0.0",
		"rollup": "^1.20.3",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-typescript2": "^0.24.0",
		"source-map-support": "^0.5.13",
		"ts-node": "^8.3.0",
		"tslib": "^1.10.0",
		"tslint": "^5.19.0",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^3.6.2"
	},
	"dependencies": {},
	"ava": {
		"compileEnhancements": false,
		"extensions": [
			"ts"
		],
		"require": [
			"ts-node/register"
		]
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"include": [
			"src/"
		],
		"all": true
	},
	"husky": {
		"hooks": {
			"pre-commit": "pretty-quick --staged"
		}
	},
	"prettier": {
		"singleQuote": true,
		"useTabs": true
	}
}
